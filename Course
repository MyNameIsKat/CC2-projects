package c0des;
import java.util.*;
//Lesson in Nested if-statements
//this code is made by Katrina D. Gayao copyrights meow etc.

public class C0des {

    public static void main(String[] args) {
        
        Scanner sc =new Scanner(System.in);
        System.out.print("Name: ");
        String name=sc.nextLine();
        
        System.out.println("What is your course?"
                + "\n[1] IT"
                + "\n[2] CS ");
        byte course=sc.nextByte();
        byte major;
        
        if(course==1){
            System.out.println("What is your major?"
                    + "\n[1] Security Network"
                    + "\n[2] Web Developement"
                    + "\n[3] Entrepnuership");
            major=sc.nextByte();
            
            if(major==1){
                System.out.println("Hello! "+name+" of BSIT major in Security Network");
            }else if(major==2){
                System.out.println("Hello! "+name+" of BSIT major in Web Developement");
            }else{
                System.out.println("Hello! "+name+" of BSIT major in Entrepnuership");
            }
            
        }else{
            System.out.println("What is your major?"
                    + "\n[1] Mobile Developement"
                    + "\n[2] Digital Arts"
                    + "\n[3] Data Analytics");
            major=sc.nextByte();
            if(major==1){
                System.out.println("Hello! "+name+" of BSCS major in "+"Mobile Developement");
            }else if(major==2){
                System.out.println("Hello! "+name+" of BSCS major in "+"Digital Arts");
            }else{
                System.out.println("Hello! "+name+" of BSCS major in "+"Data Analytics");
            }
        }
        
        
        
    }
    
}
